<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Modern FuelTracker Styles -->

    <!-- Text Styles -->
    <style name="TextAppearance.FuelTracker.Headline1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_size_headline_large</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.FuelTracker.Headline2" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_size_headline_medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.FuelTracker.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_size_title_large</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.FuelTracker.Subtitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">@dimen/text_size_title_medium</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.FuelTracker.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_size_body_large</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.FuelTracker.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">@dimen/text_size_body_small</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.FuelTracker.Button" parent="Widget.Material3.Button">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:minWidth">@dimen/button_min_width</item>
        <item name="android:textSize">@dimen/text_size_label_large</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/primary_blue</item>
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="cornerRadius">@dimen/text_field_corner_radius</item>
    </style>

    <style name="Widget.FuelTracker.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:minWidth">@dimen/button_min_width</item>
        <item name="android:textSize">@dimen/text_size_label_large</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/primary_blue</item>
        <item name="strokeColor">@color/primary_blue</item>
        <item name="cornerRadius">@dimen/text_field_corner_radius</item>
    </style>

    <style name="Widget.FuelTracker.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:minWidth">@dimen/button_min_width</item>
        <item name="android:textSize">@dimen/text_size_label_large</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/primary_blue</item>
    </style>

    <!-- Text Field Styles -->
    <style name="Widget.FuelTracker.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">@dimen/text_field_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/text_field_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/text_field_corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/text_field_corner_radius</item>
        <item name="boxStrokeColor">@color/primary_blue</item>
        <item name="hintTextColor">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
    </style>

    <!-- Card Styles -->
    <style name="Widget.FuelTracker.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="strokeColor">@color/card_stroke</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:layout_marginStart">@dimen/card_margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/card_margin_horizontal</item>
        <item name="android:layout_marginTop">@dimen/card_margin_vertical</item>
        <item name="android:layout_marginBottom">@dimen/card_margin_vertical</item>
    </style>

    <!-- FAB Style -->
    <style name="Widget.FuelTracker.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="android:layout_width">@dimen/fab_size</item>
        <item name="android:layout_height">@dimen/fab_size</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="backgroundTint">@color/secondary_orange</item>
        <item name="tint">@color/text_on_primary</item>
    </style>

    <!-- Bottom Navigation Style -->
    <style name="Widget.FuelTracker.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="android:layout_height">@dimen/bottom_nav_height</item>
        <item name="android:background">@color/nav_background</item>
        <item name="itemIconTint">@color/bottom_nav_color_selector</item>
        <item name="itemTextColor">@color/bottom_nav_color_selector</item>
        <item name="itemIconSize">@dimen/bottom_nav_icon_size</item>
        <item name="android:elevation">@dimen/toolbar_elevation</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemActiveIndicatorStyle">@style/Widget.FuelTracker.BottomNavigation.ActiveIndicator</item>
    </style>

    <!-- Active Indicator Style - kontroliÅ¡e background za selektovane elemente -->
    <style name="Widget.FuelTracker.BottomNavigation.ActiveIndicator" parent="">
        <item name="android:width">0dp</item>
        <item name="android:height">0dp</item>
        <item name="android:color">@android:color/transparent</item>
    </style>

    <!-- Toolbar Style -->
    <style name="Widget.FuelTracker.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:background">@color/primary_blue</item>
        <item name="android:theme">@style/ThemeOverlay.Material3.Dark</item>
        <item name="android:elevation">@dimen/toolbar_elevation</item>
        <item name="titleTextAppearance">@style/TextAppearance.FuelTracker.Title</item>
        <item name="titleTextColor">@color/text_on_primary</item>
    </style>

    <!-- Spinner Style -->
    <style name="Widget.FuelTracker.Spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:paddingHorizontal">@dimen/spacing_medium</item>
        <item name="android:paddingVertical">@dimen/spacing_small</item>
    </style>

    <!-- Progress Bar Style -->
    <style name="Widget.FuelTracker.ProgressBar" parent="Widget.Material3.CircularProgressIndicator">
        <item name="indicatorColor">@color/primary_blue</item>
        <item name="trackColor">@color/primary_blue_light</item>
    </style>
</resources>